using System;

namespace Kattis_Solutions_Apaxians
{
    class Program
    {
        static void Main(string[] args)
        {
            string longName = Console.ReadLine();
            string shortName = "";
            char letter = ' ';
            foreach (char x in longName)
            {
                if (x == letter)
                {
                    continue;
                }
                else
                {
                    letter = x;
                    shortName += x;
                }
            }
            Console.WriteLine(shortName);
        } 
    }
}
